// Colors
$dark-gray: #6D6D6D;
$medium-gray: #DADADA;
$light-gray: #e8e8e8;
$white: white;


// Typography
$default-font-weight: 100;


// Default HTML elements
body {
  font-weight: $default-font-weight;
  color: $dark-gray;
}
h1, h2, h3 {
  font-weight: $default-font-weight;
}
p {
  line-height: 1.7;
}


// Components
.stacked_hero_section-title {
  font-size: 34px;
  text-transform: uppercase;
  letter-spacing: 3px; // TODO: Make relative
  border-bottom-style: solid;
  border-bottom-width: 1px;
  border-bottom-color: $medium-gray;
  text-align: center;
  padding-bottom: 28px;
  margin-bottom: 32px;
}
.stacked_hero_section--alt {
  background-color: $light-gray;
  padding: 25px 121px;
  > .stacked_hero_section-title {
    border-bottom-color: $white;
  }
}

.slide {
  background-color: $dark-gray;
  padding: 3px;
  > .slide-title {
    font-size: 44px;
    color: $white;
    margin-bottom: 22px;
  }
  > p {
    color: $white;
    font-size:18px;
  }
}


.icon_box {
  background-color: $light-gray;
  padding: 2px;
  > p { // TODO: Unify paragraph styles
    font-size: 14px;
  }
  &-title {
    font-size: 26px;
    text-transform: uppercase;
    letter-spacing: 1px;
    text-align: center;
  }
}

.snippet {
  > p {
    font-size: 14px;
  }
  &-title {
    font-size: 24px;
    margin-bottom: 17px;
  }
  &-attribution {
    font-style: italic;
    & > a {
      color: $dark-gray;
      &:hover, &:visited, &:link, &:active {
        color: $dark-gray;
      }
    }
  }
}