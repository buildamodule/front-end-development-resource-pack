.stacked_hero_section-title {
  font-family: sans-serif;
  font-size: 34px;
  font-weight: 100;
  color: #6D6D6D;
  text-transform: uppercase;
  letter-spacing: 3px;
  border-bottom-style: solid;
  border-bottom-width: 1px;
  border-bottom-color: #DADADA;
  text-align: center;
  padding-bottom: 28px;
  margin-bottom: 32px;
}
.stacked_hero_section--alt {
  background-color: #e8e8e8;
  padding: 25px 121px;
}
.stacked_hero_section--alt > .stacked_hero_section-title {
  border-bottom-color: white;
}
.slide {
  background-color: #60635F;
  padding: 3px;
}
.slide > .slide-title {
  font-family: sans-serif;
  font-size: 44px;
  font-weight: 100;
  color: white;
}